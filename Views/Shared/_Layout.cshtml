<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link href="~/css/site.css" rel="stylesheet" />
    <title></title>
</head>

<body>
    <nav class="navbar navbar-expand-xl navbar-light custom-nav-color ">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index" asp-controller="home">
                <img src="~/Images/white-logo-transparent-background.png"
                     class="img-fluid custom-logo" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 d-flex align-items-center">
                    <li class="nav-item text-center custom-navitems ms-xl-3 mt-xl-0 mt-2">
                    <a class="nav-link custom-navitems custom-nav-btn" aria-current="page" href="#">Book now</a>
                    </li>
                    <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2">
                        <a class="nav-link custom-navitems custom-special" asp-action="Prices" asp-controller="home">Prices and services</a>
                    </li>
                    <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2">
                        <a class="nav-link custom-navitems" aria-current="page" href="#">
                            Warranty
                        </a>
                    </li>
                    <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2">
                        <a class="nav-link custom-navitems" href="#">Blog</a>
                    </li>
                    <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2">
                        <a class="nav-link custom-navitems " asp-action="ContactUs" asp-controller="home">Contact us</a>
                    </li>
                    <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2">
                        <a class="nav-link custom-navitems custom-nav-btn" href="#">login</a>
                    </li>
                    <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2 ">
                        <a class="nav-link custom-navitems custom-nav-btn " href="#">Become a helper</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main role="main" class="">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 footer-widget">
                        <a href="#" title="Helper Hand">
                            <img src="~/Images/white-logo-transparent-background-copy-4.png" alt="Helper Hand" class="a">
                        </a>
                    </div>
                    <div class="col-lg-8 footer-widget">
                        <ul class="footer-navigation d-flex justify-content-center">
                            <li>
                                <a asp-action="index" asp-controller="home">Home</a>
                            </li>
                            <li>
                                <a asp-action="About" asp-controller="home">About</a>
                            </li>
                            <li>
                                <a href="#" title="Testimonials">Testimonials</a>
                            </li>
                            <li>
                                <a asp-action="Faq" asp-controller="home">FAQs</a>
                            </li>
                            <li>
                                <a href="#" title="Insurance Policy">Insurance Policy</a>
                            </li>
                            <li>
                                <a href="#" title="Impressum">Impressum</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 footer-widget">
                        <ul class="social-media-list d-flex justify-content-end">
                            <li>
                                <a href="#" target="_blank" title="Facebook">
                                    <img src="~/Images/fb.png" alt="Facebook">
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank" title="Instagram">
                                    <img src="~/Images/inst.png" alt="Instagram">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-12">
                    <hr class="text-light">
                    <div class="custom-footer-text text-center ">
                        ©2018 Helperland. All rights reserved. Terms and Conditions | Privacy Policy
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous">

    </script>
</body>
</html>
