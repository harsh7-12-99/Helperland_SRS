@model Helperland.Models.User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />
    <title>Become a Helper</title>
</head>

<body>
    <section class="custom-background" style="background-image: url('/Images/bgbecome.png') ">
        <nav class="navbar navbar-expand-xl navbar-light custom-nav-color bg-transparent">
            <div class="container-fluid">
                <a class="navbar-brand" href="index.html">
                    <img src="~/Images/white-logo-transparent-background.png"
                         class="img-fluid custom-logo" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 d-flex align-items-center">
                        <li class="nav-item text-center custom-navitems ms-xl-3 mt-xl-0 mt-2"></li>
                        <a class="nav-link custom-navitems custom-nav-btn" aria-current="page" href="#">Book now</a>
                        </li>
                        <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2">
                            <a class="nav-link custom-navitems custom-special" href="#">Prices and services</a>
                        </li>
                        <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2">
                            <a class="nav-link custom-navitems" aria-current="page" href="#">
                                Warranty
                            </a>
                        <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2">
                            <a class="nav-link custom-navitems" href="#">Blog</a>
                        </li>
                        <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2">
                            <a class="nav-link custom-navitems " href="#">Contact us</a>
                        </li>
                        <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2">
                            <a class="nav-link custom-navitems custom-nav-btn" href="#">login</a>
                        </li>
                        <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2 ">
                            <a class="nav-link custom-navitems custom-nav-btn " href="#">Become a helper</a>
                        </li>
                        <li class="nav-item text-center ms-xl-3 mt-xl-0 mt-2 ">
                            <a class="nav-link p-0" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <img class="img-fluid" src="~/Images/flag.png" alt="flag" />
                                <img class="img-fluid" src="~/Images/aa.png" alt="aa" />
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <section class="mt-5">
            <div class="mask d-flex align-items-center h-100">
                <div class="container h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                            <div class="card">
                                <div class="card-body p-5">
                                    <h2 class="text-uppercase fw-bold text-center mb-5 custom-register">
                                        Register Now !
                                    </h2>

                                    <form method="post" asp-controller="Account" asp-action="CreateForProvider">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="input-group mb-3">
                                            <input type="text" asp-for="FirstName" class="form-control" placeholder="First Name"
                                                   aria-label="Username" aria-describedby="basic-addon1">
                                        </div>
                                        <div class="input-group mb-3">
                                            <input type="text" asp-for="LastName" class="form-control" placeholder="Last name"
                                                   aria-label="Username" aria-describedby="basic-addon1">
                                        </div>
                                        <div class="input-group mb-3">
                                            <input type="email" asp-for="Email" class="form-control" placeholder="Email Address"
                                                   aria-label="Username" aria-describedby="basic-addon1">
                                        </div>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">+46</span>
                                            </div>
                                            <input type="text" asp-for="Mobile" class="form-control" placeholder="Phone Number"
                                                   aria-label="Username" aria-describedby="basic-addon1">
                                        </div>
                                        <div class="input-group mb-3">
                                            <input type="password" asp-for="Password" class="form-control" placeholder="password"
                                                   aria-label="Username" aria-describedby="basic-addon1">
                                        </div>
                                        <div class="input-group mb-3">
                                            <input type="password" class="form-control" @*asp-for="ConfirmPassword"*@ placeholder="Confirm password"
                                                   aria-label="Username" aria-describedby="basic-addon1">
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value=""
                                                   id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                Send me newslatter from Helperland
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value=""
                                                   id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                I accept <span style="color: #1FB6FF;">terms and conditons</span> and
                                                <span style="color: #1FB6FF;">privacy policy</span>
                                            </label>
                                        </div>

                                        <div class="p-0 mt-3 ">
                                            <img src="~/Images/layer-20.png" class="img-fluid" alt="">
                                        </div>

                                        <div class="input-group mb-3 mt-3 text-center align-items-center">

                                            <button type="submit"
                                                    class="btn btn-primary btn-lg btn-block custom-submit-button">
                                                Register
                                            </button>
                                            <div>
                                                <h3>@TempData["ErrorMessage"]</h3>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class=" container d-flex justify-content-center custom-shape-1">
            <img src="~/Images/bottom.png" alt="" />
        </div>

    </section>

    <div class="container-fluid custom-margin mt-5 ">
        <div class="row  text-center">
            <h1 class="custom-text-prices">How it Works</h1>
        </div>
    </div>

    <section mb-5>
        <div class="col-12 custom-how-it-works">
            <div class="d-flex  flex-wrap flex-md-nowrap justify-content-center mt-5">
                <div class="d-flex order-1 order-md-0 flex-column justify-content-center text-center text-md-start me-5">
                    <h3 class="mb-3 fw-bold ">Register yourself</h3>
                    <p class="mb-3 mb-md-5 custom-para">
                        Provide your basic information to register <br> yourself as a
                        service provider.
                    </p>
                    <p class="custom-para">
                        Read more <img src="" alt="" />
                    </p>
                </div>
                <div class="d-flex justify-content-space-between justify-content-md-end">
                    <img class="img-fluid mb-3 mb-md-0" src="~/Images/1stbecome.png" alt="" />
                </div>
            </div>
        </div>
        <div class="col-12 custom-how-it-works">
            <div class="d-flex flex-wrap flex-md-nowrap justify-content-center">
                <div class="d-flex justify-content-center justify-content-md-start me-5">
                    <img class="img-fluid mb-3 mb-md-0" src="~/Images/2ndbecome.png" alt="" />
                </div>
                <div class="d-flex flex-column  justify-content-center text-center text-md-start">
                    <h3 class="mb-3 fw-bold t-30">Get service requests</h3>
                    <p class="mb-3 mb-md-5 custom-para">
                        You will get service requests from <br>customers depending upon
                        service area and profile.
                    </p>
                    <p class="custom-para">
                        Read more <img src="" alt="" />
                    </p>
                </div>
            </div>
        </div>
        <div class="col-12 custom-how-it-works">
            <div class="d-flex flex-wrap flex-md-nowrap justify-content-center mt-5">
                <div class="d-flex order-1 order-md-0 flex-column justify-content-center text-center text-md-start me-5">
                    <h3 class="mb-3 fw-bold ">Complete service</h3>
                    <p class="mb-3 mb-md-5 custom-para">
                        Accept service requests from your customers<br>
                        and complete your work.
                    </p>
                    <p class="custom-para">
                        Read more <img src="" alt="" />
                    </p>
                </div>
                <div class="d-flex justify-content-space-between justify-content-md-end">
                    <img class="img-fluid mb-3 mb-md-0" src="~/Images/3rdbecome.png" alt="" />
                </div>
            </div>
        </div>
    </section>
    <section class="mt-5">
        <div class="container-fluid mt-5 mb-5 d-flex justify-content-center">
            <div class="d-flex flex-column justify-content-center">
                <h4 class="text-center">GET OUR NEWSLETTER</h4>
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <input class="newsletter-input" type="email" name="" id="" placeholder="email" />
                    <div> <button class="submit">Submit</button></div>
                </div>
            </div>
    </section>
    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 footer-widget">
                        <a href="#" title="Helper Hand">
                            <img src="~/Images/white-logo-transparent-background-copy-4.png" alt="Helper Hand" class="a">
                        </a>
                    </div>
                    <div class="col-lg-8 footer-widget">
                        <ul class="footer-navigation d-flex justify-content-center">
                            <li>
                                <a href="#" title="Home">Home</a>
                            </li>
                            <li>
                                <a href="#" title="About">About</a>
                            </li>
                            <li>
                                <a href="#" title="Testimonials">Testimonials</a>
                            </li>
                            <li>
                                <a href="#" title="FAQs">FAQs</a>
                            </li>
                            <li>
                                <a href="#" title="Insurance Policy">Insurance Policy</a>
                            </li>
                            <li>
                                <a href="#" title="Impressum">Impressum</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 footer-widget">
                        <ul class="social-media-list d-flex justify-content-end">
                            <li>
                                <a href="#" target="_blank" title="Facebook">
                                    <img src="~/Images/fb.png" alt="Facebook">
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank" title="Instagram">
                                    <img src="~/Images/inst.png" alt="Instagram">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-12">
                    <hr class="text-light">
                    <div class="custom-footer-text text-center ">
                        ©2018 Helperland. All rights reserved. Terms and Conditions | Privacy Policy
                    </div>
                </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</body>

</html>