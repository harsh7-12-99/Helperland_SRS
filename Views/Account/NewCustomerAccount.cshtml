<section>
    <div class="d-flex mb-8">

        <div class="container-fluid custom-margin ">
            <div class="row  text-center">
                <h1 class="custom-text-prices mt-5">Create an account</h1>
            </div>
            <div class="d-flex align-items-center justify-content-center mt-2">
                <div class="custom-separator-line me-3 mb-4"> </div>
                <div> <img src="~/Images/forma-1-copy-5.png " class="img-fluid mb-4" alt=""></div>
                <div class="custom-separator-line ms-3 mb-4"></div>
            </div>
            <section>
                <div class="s-2-p-1 price-top-border container d-flex flex-column justify-content-center pt-5 col-lg-8">
                    <div class=" container  d-flex justify-content-center">
                        <div class="row container justify-content-center contact-form">
                            <div class="col-sm-6 mb-3 ">
                                <input type="text" class="form-control form-control-lg h-46 "
                                       placeholder="First name" aria-label="First name" maxlength="25" />
                            </div>
                            <div class="col-sm-6 mb-3 ">
                                <input type="text" class="form-control form-control-lg h-46 "
                                       placeholder="Last name" aria-label="Last name" maxlength="25" />
                            </div>
                            <div class="col-sm-6  mb-3 ">
                                <div class="input-group">
                                    <button class="btn btn-outline-secondary h-46 btn-mobile" type="button">
                                        +49
                                    </button>
                                    <input type="text" class="form-control form-control-lg h-46"
                                           placeholder="Mobile Number" maxlength="25" />
                                </div>
                            </div>
                            <div class="col-sm-6  mb-3 ">
                                <input type="email" placeholder="Email"
                                       class="form-control form-control-lg h-46" id="inputEmail" maxlength="25" />
                            </div>
                            <div class="col-sm-6 mb-3 ">
                                <input type="password" class="form-control form-control-lg h-46 "
                                       placeholder="Password" aria-label="First name" maxlength="25" />
                            </div>
                            <div class="col-sm-6 mb-5 ">
                                <input type="password" class="form-control form-control-lg h-46 "
                                       placeholder="Confirm Password" aria-label="Last name" maxlength="25" />
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input " type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label " for="flexCheckDefault">
                                    Yes, I would like to subscribe to the newsletter of Helperland GmbH with
                                    vouchers, trends, promotions and individualized offers. I can unsubscribe
                                    from the newsletter at any time in the newsletter and in the customer
                                    account itself.
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input " type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label " for="flexCheckDefault">
                                    I agree with the <span>
                                        <a class="link" href="#">
                                            terms and
                                            conditions
                                        </a>
                                    </span> of Helperland GmbH.
                                </label>
                            </div>
                            <div class="form-check mb-3 ">
                                <input class="form-check-input " type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label " for="flexCheckDefault">
                                    I have read the
                                    <span><a class="link" href="#">privacy policy</a></span>
                                </label>
                            </div>
                            <div class="d-flex justify-content-center">
                                <img class="img-fluid" src="~/Images/layer-20.png" alt="" />
                            </div>
                            <button id="this" class="rounded-pill col-lg-2 submit-button mt-4 t-20 " style="background-color: #1D7A8C;height:50px; color: white;"
                                    type="submit">
                                Register
                            </button>
                            <div>
                                <h3>@ViewBag.Error</h3>
                            </div>
                            <div class="d-flex container justify-content-center mt-3 mb-5">
                                Already Registered? 
                                <span><a asp-controller="home"  asp-action="Index" data-dismiss="modal" data-toggle="modal" data-bs-target="#myModal">&nbsp Login now</a></span>
                            </div>
                        </div>
                    </div>
                </div>

            </section>
        </div>
    </div>
</section>
